<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.usc.itp476.contact.contactproject.InGameActivity">

    <TextView android:text="Score:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txstatic"
        android:textSize="22dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txvwPoints"
        android:layout_toStartOf="@+id/txvwPoints" />

    <TextView android:text="30" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvwPoints"
        android:textSize="22dp"
        android:minWidth="30dp"
        android:maxWidth="30dp"
        android:layout_alignTop="@+id/txstatic"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target:"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_below="@+id/txstatic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView2"
        android:textSize="22dp"
        android:layout_alignTop="@+id/txvwPoints"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/txvwMaxScore"
        android:textSize="22dp"
        android:minWidth="30dp"
        android:maxWidth="30dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp to ResultsActivity"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
