<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:background="@drawable/borderouterimage">

    <ImageView
        android:id="@+id/imageViewPhotoFriend"
        android:layout_width="135dp"
        android:layout_height="115dp"
        android:gravity="center"
        android:contentDescription="Friend"
        android:src="@mipmap/large"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@android:color/black"
        android:id="@+id/textViewScoreFriend"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignTop="@+id/imageViewPhotoFriend"
        android:layout_alignEnd="@+id/imageViewPhotoFriend"
        android:layout_alignRight="@+id/imageViewPhotoFriend"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxInvite"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:layout_alignTop="@+id/imageViewPhotoFriend"
        android:layout_alignEnd="@+id/imageViewPhotoFriend"
        android:layout_alignRight="@+id/imageViewPhotoFriend"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1234"
        android:id="@+id/textViewObjectID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ryan Zhou"
        android:id="@+id/textViewNameFriend"
        android:layout_below="@id/imageViewPhotoFriend"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="2dp"
        android:lines="1"
        android:minLines="1"
        android:maxLines="1" />

</RelativeLayout>