<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@drawable/borderouterimage">

    <ImageView
        android:id="@+id/imageViewFriend"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:contentDescription="Friend"
        android:src="@mipmap/large"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@android:color/black"
        android:id="@+id/imageViewScore"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/imageViewFriend"
        android:layout_alignEnd="@+id/imageViewFriend"
        android:layout_alignRight="@+id/imageViewFriend"
        style="@style/TextAppearance.AppCompat.Headline" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckbxInvite"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:layout_alignTop="@+id/imageViewFriend"
        android:layout_alignEnd="@+id/imageViewFriend"
        android:layout_alignRight="@+id/imageViewFriend"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1234"
        android:id="@+id/ObjectIdTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

</RelativeLayout>