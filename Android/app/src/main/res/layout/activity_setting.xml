<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.hugfest.SettingActivity"
    android:background="@color/yellow">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/buttonHome"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonFriend"
        android:layout_toStartOf="@+id/buttonFriend" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend"
        android:id="@+id/buttonFriend"
        android:background="@color/black"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/buttonHome"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/buttonProfile"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_alignTop="@+id/buttonFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonFriend"
        android:layout_toEndOf="@+id/buttonFriend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/textView4"
        android:layout_below="@+id/buttonFriend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textStyle="bold" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/switchNotification"
        android:layout_marginTop="43dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/switchLocation"
        android:layout_alignStart="@+id/switchLocation"
        android:layout_alignRight="@+id/switchLocation"
        android:layout_alignEnd="@+id/switchLocation" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Location"
        android:id="@+id/switchLocation"
        android:layout_below="@+id/switchNotification"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Stats"
        android:id="@+id/buttonReset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

</RelativeLayout>
